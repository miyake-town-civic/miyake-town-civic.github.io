<meta property="og:title" content="{{ title }}">
<meta property="og:description" content="{{ description }}">
<meta property="og:locale" content="{{ lang }}">
<meta property="og:url" content="{{ schema_surl }}">
<meta property="og:type" content="article">
<meta property="article:author" content="{{ author }}">
<meta property="article:published_time" content="{{ schema_date }}">
<meta property="article:modified_time" content="{{ schema_modi }}">
{% if page.header.og_image %}
    <meta property="og:image" content="{{ page.header.og_image | absolute_url }}">
{% else %}
    <meta property="og:image" content="{{ "/assets/images/common/ogp.png" | absolute_url }}">
{% endif %}
